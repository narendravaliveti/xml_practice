<mvc:View
        controllerName="route.controller.View2"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        displayBlock="true">
    <Page title="{i18n>view2Title}"
          showNavButton="true"
          enableScrolling="false"
          navButtonPress=".navButtonPress">
        <content>
            <core:Fragment fragmentName="route.view.AddStudentDialog" type="XML"></core:Fragment>
            <Page showHeader="false">
                <content>
                        <List items="{StdModel>/Students}"
                              id="studentList"
                              mode="MultiSelect"
                              growing="true"
                              growingThreshold="8">
                            <headerToolbar>
                                <Toolbar>
                                    <content>
                                        <ToolbarSpacer/>
                                        <Button text="Add" icon="sap-icon://add" press=".onAddStudentPress"/>
                                        <Button text="Update" icon="sap-icon://edit" press=".onAddStudentPress"/>
                                        <Button text="Delete" icon="sap-icon://delete" press=".onDeleteListItem"/>
                                    </content>
                                </Toolbar>
                            </headerToolbar>
                            <items>
                                <StandardListItem title="{StdModel>StdId}"
                                                  description="{StdModel>StdName}"
                                                  type="Navigation"
                                                  press=".listNavPress"/>
                            </items>
                        </List>
                </content>
            </Page>
        </content>
    </Page>
</mvc:View>