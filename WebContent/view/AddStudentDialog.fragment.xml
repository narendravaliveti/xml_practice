<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form">
    <Dialog id="AddStudentDialog"
            title="Add Student">
        <content>
            <form:Form title="Add Student">
                <form:layout>
                    <form:ResponsiveGridLayout />
                </form:layout>
                <form:FormContainer>
                    <form:FormElement>
                        <Label text="StudentId"
                               required="true"/>
                        <form:fields>
                            <Input value="{StdModel>/AddStudent/StdId}"
                                    change=".onIdChange"/>
                        </form:fields>
                    </form:FormElement>
                    <form:FormElement>
                        <Label text="StudentName"
                               required="true"/>
                        <form:fields>
                            <Input value="{StdModel>/AddStudent/StdName}"/>
                        </form:fields>
                    </form:FormElement>
                </form:FormContainer>
            </form:Form>
        </content>
        <buttons>
            <Button icon="sap-icon://accept"
                    type="Accept"
                    press=".onAddPress"/>
            <Button icon="sap-icon://decline"
                    type="Reject"
                    press=".onRejectPress"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>